@model X.PagedList.IPagedList<DoAnWeb2024.Models.ProductModel>
@using X.PagedList.Mvc.Core;

<div class="col-sm-3">
    @Html.Partial("_SideBarPartial")
</div>

<style>
    .product-image-wrapper {
        height: 450px;
    }
</style>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <h2 class="title text-center">Sản phẩm</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id">
                                <img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
                                <h2>$@item.Price</h2>
                                <p>@item.Name</p>
                                <p>Danh mục: @item.Category.Name</p>
                                <p>Nhà sản xuất: @item.Brand.Name</p>
                            </a>
                            <a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id">
                                <i class="fa fa-shopping-cart"></i> Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i> Thêm vào yêu thích</a></li>
                            <li><a href="#"><i class="fa fa-plus-square"></i> Thêm vào so sánh</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="pagination-wrapper text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
