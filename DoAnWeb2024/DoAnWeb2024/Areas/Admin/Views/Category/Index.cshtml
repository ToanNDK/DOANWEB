@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Danh sách loại sản phẩm";
}

<a asp-action="Create" asp-controller="Category">Thêm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th> 
            <th scope="col">Loại sản phẩm</th> @*Category Name*@
            <th scope="col">Mô tả</th>
            <th scope="col">Slug</th>
            <th scope="col">Trạng thái</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                
                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success"> Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger"> Ẩn</span>

                    }
                </td>
                
              
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Xóa</a>

                </td>
            </tr>
        }



    </tbody>
</table>
