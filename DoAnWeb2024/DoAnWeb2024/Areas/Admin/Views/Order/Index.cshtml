@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Danh sách đơn hàng";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">OrderCode</th>
            <th scope="col">UserName</th>
            <th scope="col">Date</th>
            <th scope="col">OrderStatus</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th scope="col">@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>

                
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đơn hàng thành công</span>

                    }
                </td>


                <td>
                    <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id">Xóa</a>

                </td>
            </tr>
        }



    </tbody>
</table>
